<% if current_user %>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
      <h3 class="mb-0 text-primary">
        <i class="bi bi-building"></i> 
        Hello, <%= current_user.email %>!
      </h3>
      </div>
    
  </div>

<% else %>
  <div class="p-5 mb-5 bg-light rounded-3 shadow-sm text-center">
    <div class="container-fluid py-3">
      <h1 class="display-5 fw-bold text-dark">Welcome to Project Management App</h1>
      <p class="col-md-8 fs-4 mx-auto text-muted">
        Streamline your workflow and manage your projects effortlessly with our modern SaaS platform. 
        Choose a plan that fits your needs below.
      </p>
    </div>
  </div>

  <div class="container mb-5">
    <div class="row row-cols-1 row-cols-md-2 mb-3 text-center justify-content-center g-4">
      
      <div class="col-lg-4">
        <div class="card mb-4 rounded-3 shadow-sm h-100 border-primary">
          <div class="card-header py-3 text-white bg-primary border-primary">
            <h4 class="my-0 fw-normal">Free Plan</h4>
          </div>
          <div class="card-body d-flex flex-col flex-column">
            <h1 class="card-title pricing-card-title">$0<small class="text-muted fw-light">/mo</small></h1>
            <ul class="list-unstyled mt-3 mb-4 text-start mx-auto">
              <li class="mb-2">✅ Unlimited file uploads</li>
              <li class="mb-2">✅ Responsive design</li>
              <li class="mb-2">✅ Access anywhere</li>
              <li class="mb-2">⚠️ 1 Project only</li>
            </ul>
            <div class="mt-auto">
             <%= link_to 'Sign Up for Free', new_user_registration_path(plan: 'free'), class: 'w-100 btn btn-lg btn-outline-primary' %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="card mb-4 rounded-3 shadow-sm h-100 border-success">
          <div class="card-header py-3 text-white bg-success border-success">
            <h4 class="my-0 fw-normal">Premium Plan</h4>
          </div>
          <div class="card-body d-flex flex-col flex-column">
            <h1 class="card-title pricing-card-title">$10<small class="text-muted fw-light">/mo</small></h1>
            <ul class="list-unstyled mt-3 mb-4 text-start mx-auto">
              <li class="mb-2">✅ Unlimited file uploads</li>
              <li class="mb-2">✅ Responsive design</li>
              <li class="mb-2">✅ Access anywhere</li>
              <li class="mb-2 fw-bold text-success">✨ Unlimited Projects</li>
            </ul>
            <div class="mt-auto">
              <%= link_to 'Get Premium', new_user_registration_path(plan: 'premium'), class: 'w-100 btn btn-lg btn-success' %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
<% end %>