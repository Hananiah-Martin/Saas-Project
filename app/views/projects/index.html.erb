<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-5">
    <div>
      <h1 class="fw-bold text-dark mb-1">Projects</h1>
      <p class="text-muted mb-0">Manage and track your ongoing initiatives</p>
    </div>
    <%= link_to new_project_path, class: "btn btn-primary rounded-pill px-4 py-2 shadow-sm fw-bold d-flex align-items-center" do %>
      <i class="bi bi-plus-lg me-2"></i> New Project
    <% end %>
  </div>

  <% if notice.present? %>
    <div class="alert alert-success border-0 shadow-sm rounded-3 mb-4 d-flex align-items-center" role="alert">
      <i class="bi bi-check-circle-fill me-2"></i>
      <%= notice %>
    </div>
  <% end %>

  <div id="projects" class="row g-4">
    <% @projects.each do |project| %>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 border-0 shadow-sm project-card">
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <div class="badge bg-primary-soft text-primary rounded-pill px-3">Active</div>
              <small class="text-muted italic">
                <i class="bi bi-calendar3 me-1"></i> 
                <%= project.expected_completion_date&.strftime("%b %d, %Y") || "No date" %>
              </small>
            </div>
            
            <h4 class="card-title fw-bold mb-2"><%= project.title %></h4>
            <p class="card-text text-muted mb-4 line-clamp">
              <%= project.details.presence || "No description provided for this project." %>
            </p>
          </div>

          <div class="card-footer bg-transparent border-top-0 p-4 pt-0">
            <%= link_to project, class: "btn btn-outline-primary w-100 rounded-pill fw-bold btn-sm py-2 transition-link" do %>
              View Details <i class="bi bi-arrow-right ms-1"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @projects.empty? %>
    <div class="text-center py-5">
      <div class="display-1 text-light mb-3"><i class="bi bi-folder2-open"></i></div>
      <h3 class="text-muted">No projects yet</h3>
      <%= link_to "Get started by creating your first project", new_project_path, class: "text-primary fw-bold" %>
    </div>
  <% end %>
</div>
<style>
  /* Project Card Hover Effect */
  .project-card {
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    border: 1px solid rgba(0,0,0,0.05) !important;
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.08) !important;
    border-color: rgba(13, 110, 253, 0.2) !important;
  }

  /* Soft Badge Style */
  .bg-primary-soft {
    background-color: rgba(13, 110, 253, 0.1);
  }

  /* Limit text to 3 lines to keep cards even */
  .line-clamp {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;  
    overflow: hidden;
    min-height: 4.5em;
  }

  /* Buttons */
  .btn-outline-primary:hover {
    color: #fff;
    background: linear-gradient(45deg, #0d6efd, #0052cc);
    border-color: transparent;
  }

  .transition-link {
    transition: all 0.2s ease-in-out;
  }
</style>