<% if notice %>
  <div class="alert alert-success alert-dismissible fade show mb-4 shadow-sm" role="alert">
    <i class="bi bi-check-circle-fill me-2"></i>
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-lg-9">
      
      <div class="card border-0 shadow-sm mb-4 project-detail-card">
        <div class="card-gradient-top"></div>
        
        <div class="card-body p-4">
          <div class="d-flex justify-content-between align-items-start mb-4 pb-3 border-bottom">
            <div class="flex-grow-1">
              <div class="d-flex align-items-center mb-3">
                <div class="project-icon-badge me-3">
                  <i class="bi bi-folder-fill"></i>
                </div>
                <div>
                  <h1 class="h2 fw-bold mb-1 text-primary"><%= @project.title %></h1>
                  <div class="d-inline-flex align-items-center tenant-badge-detail px-3 py-1 rounded-pill">
                    <i class="bi bi-building me-2 small"></i>
                    <span class="fw-semibold small"><%= current_tenant.name %></span>
                  </div>
                </div>
              </div>
            </div>
            
            <span class="badge bg-success px-3 py-2">
              <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
              Active
            </span>
          </div>

          <div class="details-section p-3 rounded-3 mb-4">
            <div class="d-flex align-items-center mb-2">
              <i class="bi bi-file-text-fill text-primary me-2 fs-5"></i>
              <h3 class="h6 mb-0 fw-bold text-primary">Project Details</h3>
            </div>
            <p class="text-secondary mb-0">
              <%= @project.details.presence || "No details provided for this project." %>
            </p>
          </div>

          <div class="row g-3 mb-4">
            <div class="col-md-6">
              <div class="info-card p-3 rounded-3 h-100">
                <div class="d-flex align-items-center">
                  <div class="info-icon me-3">
                    <i class="bi bi-calendar-check-fill"></i>
                  </div>
                  <div>
                    <div class="small text-muted fw-semibold mb-1">Expected Completion</div>
                    <div class="fw-bold">
                      <%= @project.expected_completion_date&.strftime("%b %d, %Y") || "TBD" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="info-card p-3 rounded-3 h-100">
                <div class="d-flex align-items-center">
                  <div class="info-icon-alt me-3">
                    <i class="bi bi-clock-fill"></i>
                  </div>
                  <div>
                    <div class="small text-muted fw-semibold mb-1">Created On</div>
                    <div class="fw-bold">
                      <%= @project.created_at.strftime("%b %d, %Y") %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="artifacts-section p-3 bg-light rounded-3 mb-4">
            <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex align-items-center">
                <i class="bi bi-paperclip text-primary me-2 fs-5"></i>
                <h3 class="h6 mb-0 fw-bold">Project Artifacts</h3>
              </div>
              <% if current_tenant.plan != 'premium' && @project.artifacts.count >= 2 %>
                <%= link_to checkout_path, class: "btn btn-sm btn-warning shadow-sm fw-bold d-flex align-items-center gap-2" do %>
                  <i class="bi bi-stars"></i>
                  <span>Limit Reached (Upgrade to Premium)</span>
                <% end %>
              <% else %>
                <%= link_to new_project_artifact_path(@project), class: "btn btn-sm btn-primary shadow-sm" do %>
                  <i class="bi bi-plus-circle me-1"></i>
                  Add Artifact
                <% end %>
              <% end %>
            </div>
          </div>

          <div class="artifacts-grid">
            <% if @project.artifacts.any? %>
              <div class="row row-cols-1 row-cols-md-2 g-3">
                <% @project.artifacts.each do |artifact| %>
                  <div class="col">
                    <div class="card h-100 border shadow-sm artifact-card">
                      <% if artifact.upload.attached? %>
                        <% if artifact.upload.image? %>
                          <%= cl_image_tag artifact.upload.key, 
                              width: 400, height: 220, crop: :fill, 
                              class: "card-img-top", alt: artifact.name %>
                        <% else %>
                          <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                            <i class="bi bi-file-earmark-zip fs-1 text-secondary"></i>
                          </div>
                        <% end %>
                      <% end %>

                      <div class="card-body p-3">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                          <h6 class="fw-bold mb-0 text-truncate" title="<%= artifact.name %>">
                            <%= artifact.name %>
                          </h6>
                          <span class="badge bg-light text-dark border small">
                            <%= number_to_human_size(artifact.upload.blob.byte_size) %>
                          </span>
                        </div>
                        
                        <div class="d-flex gap-2">
                          <%= link_to artifact_path(artifact), class: "btn btn-sm btn-outline-primary flex-grow-1" do %>
                            <i class="bi bi-eye"></i> View
                          <% end %>
                          
                          <%= link_to rails_blob_path(artifact.upload, disposition: "attachment"), class: "btn btn-sm btn-success" do %>
                            <i class="bi bi-download"></i>
                          <% end %>

                          <%= button_to artifact_path(artifact), method: :delete, 
                              class: "btn btn-sm btn-outline-danger",
                              data: { turbo_confirm: "Delete this file?" } do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-5 border rounded-3 border-dashed bg-light">
                <i class="bi bi-cloud-arrow-up display-5 text-muted mb-3 d-block"></i>
                <p class="text-muted mb-0">No artifacts have been uploaded for this project yet.</p>
                <p class="small text-muted">Files uploaded will be stored securely on Cloudinary.</p>
              </div>
            <% end %>
          </div>

        </div>
      </div>

      <div class="card border-0 shadow-sm">
        <div class="card-body p-3">
          <div class="d-flex flex-wrap gap-2 align-items-center justify-content-between">
            <div class="d-flex gap-2">
              <%= link_to edit_project_path(@project), class: "btn btn-primary px-4" do %>
                <i class="bi bi-pencil-square me-1"></i> Edit
              <% end %>
              
              <%= link_to projects_path, class: "btn btn-outline-secondary" do %>
                <i class="bi bi-arrow-left me-1"></i> Back
              <% end %>
            </div>

            <%= button_to @project, method: :delete, class: "btn btn-link text-danger text-decoration-none", 
                data: { turbo_confirm: "Permanently delete this project?" } do %>
              <i class="bi bi-trash3 me-1"></i> Delete Project
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<style>
  .project-detail-card { border-radius: 12px; overflow: hidden; }
  .card-gradient-top { height: 4px; background: linear-gradient(90deg, #0d6efd 0%, #6610f2 100%); }
  
  .project-icon-badge {
    width: 55px; height: 55px; background: #0d6efd;
    border-radius: 12px; display: flex; align-items: center;
    justify-content: center; color: white; font-size: 1.6rem;
  }

  .tenant-badge-detail { background: #f8f9fa; color: #6c757d; border: 1px solid #dee2e6; }
  .details-section { background-color: #f8f9fa; border-left: 4px solid #0d6efd; }
  
  .info-card { background-color: #f0f7ff; border: 1px solid #e1efff; }
  .info-icon { width: 38px; height: 38px; background: #6610f2; border-radius: 8px; display: flex; align-items: center; justify-content: center; color: white; }
  .info-icon-alt { width: 38px; height: 38px; background: #0dcaf0; border-radius: 8px; display: flex; align-items: center; justify-content: center; color: white; }

  .artifacts-section { border-left: 4px solid #198754; }
  .border-dashed { border-style: dashed !important; }
  
  .artifact-card { transition: transform 0.2s ease; }
  .artifact-card:hover { transform: translateY(-3px); }
  .card-img-top { object-fit: cover; }

  @media (max-width: 768px) {
    .project-icon-badge { width: 45px; height: 45px; font-size: 1.2rem; }
  }
</style>