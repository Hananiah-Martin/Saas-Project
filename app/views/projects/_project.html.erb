<div id="<%= dom_id project %>" class="card shadow-sm mb-3">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <div>
        <h5 class="card-title text-primary mb-1">
          <%= link_to project.title, project, class: "text-decoration-none" %>
        </h5>
        <p class="text-muted small mb-2">
          <i class="bi bi-building"></i> <%= current_tenant.name %>
        </p>
      </div>
      
      <%# Status Badge - Logic can be added later %>
      <span class="badge rounded-pill bg-info text-dark">Active</span>
    </div>

    <div class="card-text mb-3 text-secondary">
      <strong>Details:</strong>
      <%= truncate(project.details, length: 150) || "No details provided." %>
    </div>

    <div class="d-flex align-items-center justify-content-between border-top pt-2">
      <div class="small text-muted">
        <i class="bi bi-calendar-check"></i>
        <strong>Due:</strong> 
        <%= project.expected_completion_date&.to_formatted_s(:long) || "TBD" %>
      </div>
      
      <div class="btn-group">
        <%= link_to "View", project, class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to "Edit", edit_project_path(project), class: "btn btn-sm btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>