<% content_for :title, "New Artifact" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">New Artifact</h1>
        <%= link_to project_artifacts_path, class: "btn btn-outline-secondary btn-sm" do %>
          <i class="bi bi-arrow-left"></i> Back to artifacts
        <% end %>
      </div>

      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <%= render "form", artifact: @artifact %>
        </div>
      </div>

    </div>
  </div>
</div>