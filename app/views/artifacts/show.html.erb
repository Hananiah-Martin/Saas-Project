<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
      
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <%= link_to project_path(@artifact.project), class: "text-decoration-none d-flex align-items-center text-muted fw-semibold" do %>
            <i class="bi bi-arrow-left me-2"></i> Back to Project
          <% end %>
        </div>
        
        <div class="d-flex gap-2">
          <%= link_to edit_artifact_path(@artifact), class: "btn btn-white border shadow-sm" do %>
            <i class="bi bi-pencil me-1"></i> Edit
          <% end %>
          
          <%= button_to artifact_path(@artifact), 
              method: :delete, 
              class: "btn btn-outline-danger shadow-sm", 
              data: { turbo_confirm: "Are you sure you want to permanently delete this artifact?" } do %>
            <i class="bi bi-trash me-1"></i> Delete
          <% end %>
        </div>
      </div>

      <% if notice %>
        <div class="alert alert-success border-0 shadow-sm d-flex align-items-center" role="alert">
          <i class="bi bi-check-circle-fill me-2"></i>
          <div><%= notice %></div>
        </div>
      <% end %>

      <%= render @artifact %>

    </div>
  </div>
</div>

<style>
  body { background-color: #f8f9fa; }
  .btn-white { background-color: #fff; color: #333; }
  .btn-white:hover { background-color: #f8f9fa; color: #000; }
  .border-dashed { border-style: dashed !important; }
</style>