<%= form_with(model: [@project, artifact]) do |form| %>

  <% if artifact.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(artifact.errors.count, "error") %> prohibited this artifact from being saved:</h2>
      <ul>
        <% artifact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :upload, "File Upload", class: "form-label" %>
    <%= form.file_field :upload, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Upload to Cloudinary", class: "btn btn-primary" %>
  </div>
<% end %>